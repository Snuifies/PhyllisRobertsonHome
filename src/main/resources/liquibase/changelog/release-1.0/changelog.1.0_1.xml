        </insert>
        <insert tableName="ROLES">
            <column name="USER_ROLE" value="ADMINISTRATOR"/>
        </insert>
        <insert tableName="USER_ROLES">
            <column name="USER_ID" valueComputed="(SELECT id FROM USERS WHERE USERNAME='snuifies' AND EMAIL='snuifies@gmail.com')"/>
            <column name="ROLE_ID" valueComputed="(SELECT id FROM ROLES WHERE USER_ROLE = 'ADMINISTRATOR')"/>
        </insert>
    </changeSet>
