<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <changeSet author="Marius" id="Create User and Role Models" >
        <!-- Create USERS Table -->
        <createTable tableName="USERS">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="USERNAME" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(120)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATE_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>               
            <column name="MODIFY_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <!-- Create ROLES Table -->
        <createTable tableName="ROLES">
            <column name="ID" type="BIGINT" autoIncrement="true"/>
            <column name="USER_ROLE" type="VARCHAR(20)" defaultValue="USER"/>
            <column name="CREATE_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>  
            <column name="MODIFY_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <!-- Create USER_ROLES Table -->
        <createTable tableName="USER_ROLES">
            <column name="USER_ID" type="BIGINT"/>
            <column name="ROLE_ID" type="BIGINT"/>
            <column name="CREATE_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>               
            <column name="MODIFY_DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <!-- Add Default ADMINISTRATOR Role -->
        <insert tableName="ROLES">
            <column name="USER_ROLE" value="ADMINISTRATOR"/>
        </insert>
        <!-- Add Default MANAGER Role -->
        <insert tableName="ROLES">
            <column name="USER_ROLE" value="MANAGER"/>
        </insert>
        <!-- Add Default STAFF Role -->
        <insert tableName="ROLES">
            <column name="USER_ROLE" value="STAFF"/>
        </insert>
    </changeSet>
    
    <changeSet author="MARIUS" id="Map Initial Users and Roles">
        <!-- Admin -->
        <insert tableName="USERS">
            <column name="USERNAME" value="admin"/>
            <column name="EMAIL" value="admin@gmail.com"/>
            <column name="PASSWORD" value="$2a$12$TfMLSufIYzhjr174BlD8V.qchIF5xnk1KHrF2Pm5toXjZ4MhHs3sS"/>
        </insert>
        <!-- Manager -->
        <insert tableName="USERS" >
            <column name="USERNAME" value="manager"/>
            <column name="EMAIL" value="manager@gmail.com"/>
            <column name="PASSWORD" value="$2a$12$TfMLSufIYzhjr174BlD8V.qchIF5xnk1KHrF2Pm5toXjZ4MhHs3sS"/>
        </insert>
        <!-- staff -->
        <insert tableName="USERS" >
            <column name="USERNAME" value="staff"/>
            <column name="EMAIL" value="staff@gmail.com"/>
            <column name="PASSWORD" value="$2a$12$TfMLSufIYzhjr174BlD8V.qchIF5xnk1KHrF2Pm5toXjZ4MhHs3sS"/>
        </insert>
        <!-- Admin Role Link-->
        <insert tableName="USER_ROLES">
            <column name="USER_ID" valueComputed="(SELECT id FROM USERS WHERE USERNAME='admin' AND EMAIL='admin@gmail.com')"/>
