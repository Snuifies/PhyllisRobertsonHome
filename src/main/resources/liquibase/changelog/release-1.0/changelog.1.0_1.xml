        </insert>
        <!-- Manager Role Link -->
        <insert tableName="USER_ROLES">
            <column name="USER_ID" valueComputed="(SELECT id FROM USERS WHERE USERNAME='manager' AND EMAIL='manager@gmail.com')"/>
            <column name="ROLE_ID" valueComputed="(SELECT id FROM ROLES WHERE USER_ROLE = 'MANAGER')"/>
        </insert>
        <!-- Staff Role Link -->
        <insert tableName="USER_ROLES">
            <column name="USER_ID" valueComputed="(SELECT id FROM USERS WHERE USERNAME='staff' AND EMAIL='staff@gmail.com')"/>
            <column name="ROLE_ID" valueComputed="(SELECT id FROM ROLES WHERE USER_ROLE = 'STAFF')"/>
        </insert>
    </changeSet>

</databaseChangeLog>
